{% extends 'base.html.twig' %}

{% block title %}Gestion des membres{% endblock %}

{% block body %}
<div>
    <table>
        <tr>
            <th>Campus</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Pseudo</th>
            <th>Mail</th>
            <th>Tel</th>
            <th></th>
            <th></th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.campus.name }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.nickname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.phone }}</td>
                <td>
                    {% if user.active %}
                        <a href="{{ path('user_disable', {'id': user.id}) }}">Désactiver</a>
                    {% else %}
                        <a href="{{ path('user_enable', {'id': user.id}) }}">Activer</a>
                    {% endif %}
                </td>
                <td><a href="{{ path('user_delete', {'id': user.id}) }}">Supprimer</a></td>
            </tr>
        {% endfor %}


    </table>
</div>
{% endblock %}
